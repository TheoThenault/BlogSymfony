<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Blog{% endblock %}</title>
    </head>
    <body>

        {# INTITULÉ DE LA PAGE #}
        <h1>{% block h1 %}Blog sur le développement symfony{% endblock %}</h1>

        {# MENU DE NAVIGATION #}
        <nav>
        {% block menu %}
            <a href="{{ path('base') }}">Acceuil</a>
            <a href="{{ path('blog_list') }}">Blog</a>
        {% endblock %}
        </nav>

        {# MESSAGES FLASH #}
        {% for msg in app.session.flashBag.get('info') %}
            <p>{{ msg }}</p>
        {% endfor %}

        {# DERNIERS ARTICLES #}
        <nav>
            {% block left_menu %}{{ include('last_articles.html.twig', {'nArticles': '3'}) }}{% endblock %}
        </nav>

        {# CONTENU DE LA PAGE #}
        {% block content %}{% endblock %}
    </body>
</html>
