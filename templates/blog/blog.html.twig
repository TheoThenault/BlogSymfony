{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} ~ by théo
{% endblock %}

{% block h1 %}
    Bienvenue sur mon blog
{% endblock %}

{% block menu %}
    {{ parent() }}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('blog_add') }}">Ajouter une page</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% block content_blog %}{% endblock %}
    {% block pagination %}{% endblock %}
{% endblock %}

{% block footer %}
    <p>"Ce blog est super!"  -  <i>Théo Thénault, 2023</i></p>
{% endblock %}