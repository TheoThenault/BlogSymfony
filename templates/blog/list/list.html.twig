{% extends 'blog/blog.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% import 'blog/list/macro.html.twig' as utils %}

{% block content_blog %}
    {% if listArticles is defined and listArticles is not empty %}
        <h2>Liste:</h2>
        <ul>
            {% for article in listArticles %}
                <li>{{ utils.gen(article) }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <h2>Aucun articles pour l'instant !</h2>
    {% endif %}
{% endblock %}
